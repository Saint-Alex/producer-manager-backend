#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Validar formato de commit conventional
commit_regex='^(feat|fix|docs|style|refactor|test|chore|perf|ci|build|revert)(\(.+\))?: .{1,50}'

if ! grep -qE "$commit_regex" "$1"; then
    echo "❌ Formato de commit inválido!"
    echo ""
    echo "Use o formato: tipo(escopo): descrição"
    echo ""
    echo "Tipos válidos: feat, fix, docs, style, refactor, test, chore, perf, ci, build, revert"
    echo ""
    echo "Exemplos:"
    echo "  feat: adicionar nova funcionalidade"
    echo "  fix(auth): corrigir bug de autenticação"
    echo "  docs: atualizar README"
    echo ""
    exit 1
fi